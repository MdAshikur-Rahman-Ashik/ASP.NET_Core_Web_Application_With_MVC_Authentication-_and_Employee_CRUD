@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1 class="mb-4">Roles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Role</a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Role Name</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
