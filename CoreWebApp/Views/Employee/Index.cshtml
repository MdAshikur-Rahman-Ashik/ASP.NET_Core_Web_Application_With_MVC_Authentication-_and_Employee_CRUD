@model IEnumerable<Employee>
<div class="row row-cols-1 row-cols-md-3 g-4">
    <!-- Existing employee cards with hover effect -->
    @foreach (var item in Model)
    {
        var photoPath = "~/images/" + (item.PhotoPath ?? "noimage.png");
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <div class="card-body text-center">
                    <img class="card-img-top rounded-circle mb-3 imageThumpnail" src="@photoPath" asp-append-version="true" style="width: 200px; height: 200px;" />
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted">@item.Email</p>
                    <p class="card-text text-muted">@item.Department</p>
                </div>
                <div class="card-footer text-center bg-transparent border-0">
                    <a asp-controller="Employee" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-2">View</a>
                    <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm me-2">Edit</a>
                    <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" >Delete</a>
                </div>
            </div>
        </div>
    }
</div>


<!-- New employee card -->
    <div class="col">
        <div class="card border-primary h-100">
            <div class="card-body text-center d-flex align-items-center justify-content-center">
                <div>
                    <h5 class="card-title">Add New Employee</h5>
                    <p>Click below to add a new employee</p>
                    <a asp-controller="Employee" asp-action="Create" class="btn btn-outline-success">Add New</a>
                </div>
            </div>
        </div>
    </div>
</div>

