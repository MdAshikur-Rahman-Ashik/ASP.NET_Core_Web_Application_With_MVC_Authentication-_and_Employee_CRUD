@model Employee

<div class="row justify-content-center m-3">
    @{
        var photoPath = "~/images/" + (Model.PhotoPath ?? "noimage.png");
    }
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>
            <div class="card-body">
                <img class="card-img-top image-thumbnail" src="@photoPath" alt="Employee Photo" asp-append-version="true" />
                <h4>Employee ID: @Model.Id</h4>
                <h4>Department: @Model.Department</h4> <!-- Corrected label -->
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Employee" asp-action="Index" class="btn btn-primary mx-2">Back</a>
                <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mx-2">Edit</a>
                <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
            </div>
        </div>
    </div>
</div>
